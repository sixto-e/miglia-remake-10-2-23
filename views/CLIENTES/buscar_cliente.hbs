<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 sinpadding">
      {{> lateralBeta}}
    </div>
    <!--DENTRO DE ESTE DIV VA: la cabecera y el contenido-->
    <div class="col-md-10 sinpadding">
      {{> cabeceraBeta}}<!--cabecera-->
      <div class="row box-ind sinpadding"><!-- Dentro de este div va todo el contenido-->
        <div class="col-md-12 box-cajas">
          {{#if found}}
          <div class="row mt-2 mb-2">
            <div class="col-md-4">
              <h4>Buscar Cliente</h4>
            </div>
          </div>

          <div class="row">

            <div class="col-md-12">

              <form action="/buscar-cliente/create" method="get">

                <div class="buscador row">

                  <div class="col-md-6">
                    <div class="buscar-input">
                      <input required class="form-control" type="text" name="razon_social"
                        placeholder="Contacto, cuit o localidad">
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="_buscar_cliente">
                      <button class="btn-sm btn btn-warning" type="submit"><i class="fa-solid fa-magnifying-glass"></i> Buscar</button>
                    </div>
                  </div>


                </div>

              </form>
            </div>
          </div>

          {{#each clientes}}

          <div class="container-fluid espacio-bloque">
            <div class="row">
              <div class="col-md-1 fondo-color-verde-icono d-flex align-items-center justify-content-center">
                  <i class='bx-md bx bxs-id-card'></i>
              </div>
              <div class="col-md-11 fondo-color-gris-contenido">
                <div class="row">
                  <div class="col-md-4 propiedad-columna-bloque-txt">

                    <div>
                      <strong>Razón social:</strong> {{razon_social}}
                    </div>

                    <div>
                      <strong>Contacto: </strong> {{nombre_contacto}}
                    </div>

                    <div>
                      <strong>Cuit: </strong> {{cuit}}
                    </div>

                    <div>
                      <strong>Localidad:</strong> {{localidad}}
                    </div>



                  </div>

                  <div class="col-md-4 propiedad-columna-bloque-txt">
                    <div>
                      <strong>Datos de contacto:</strong>
                    </div>


                    <div>
                      <strong>* Teléfono: </strong> {{telefono}}
                    </div>

                  </div>

                  <div class="col-md-4 propiedad-columna-bloque-boton">

                    <div class="dropdown">
                      <button class="btn-sm btn btn-outline-dark dropdown-toggle" 
                        type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Acciones
                      </button>
                      <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/cliente/{{id}}">Ver</a></li>
                        <li><a class="dropdown-item" href="#"></a></li>
                        <li><a class="dropdown-item" href="/cliente/borrar/{{id}}">Borrar</a></li>

                      </ul>
                    </div>
                  </div><!--Findde Col md3 -->

                </div>
              </div>
            </div>
          </div>
          {{/each}}

          {{else}}

          <div class="row mt-2 mb-2">
            <div class="col-md-4">
              <h4>Buscar Cliente</h4>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <form action="/buscar-cliente/create" method="get">
                <div class="buscador row">
                  <div class="col-md-6">

                    <div class="buscar-input">
                      <input required class="form-control" type="text" name="razon_social"
                        placeholder="Contacto, cuit o localidad">
                    </div>

                  </div>

                  <div class="col-md-6">

                    <div class="_buscar_cliente">
                      <button class="btn-sm btn btn-warning filtro-inter" type="submit"><i class="fa-solid fa-magnifying-glass"></i> Buscar</button>
                    </div>
                  </div>

                </div>

              </form>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <p class="mt-3 alert alert-danger"> Cuando haya una coincidencia los resultados se mostraran aquí abajo.
              </p>
            </div>
          </div>

          {{/if}}


        </div><!--fin col-md-12 box-cajas-->

      </div><!--fin row box-ind-->

    </div><!--fin col-md-10-->

  </div><!--fin row-->


  <div><!--fin container fluid-->