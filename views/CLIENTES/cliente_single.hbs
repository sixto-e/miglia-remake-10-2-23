                    <input class="form-control muted"  disabled type="text" name="mail" value="{{mail}}" placeholder="Mail">

                  </div>

                  {{/each}}

                  <div class="col-md-4">
                    <label class="form-label" for="semaforo_comercial">Semáforo comercial: </label>
                    <select class="form-control muted " disabled name="semaforo_comercial" id="">
                      <option value="{{semaforo_c.id}}" selected>{{semaforo_c.sem_descrip}}</option>
                      {{#each semafs}}
                      <option value="{{id}}">{{sem_descrip}}</option>
                      {{/each}}
                    </select>
                  </div>

                </div>

                <div class="textarea-container ">
                  <textarea name="observacion" disabled class="muted" placeholder="Escribe aquí las observaciones"></textarea>
                </div>

     
              
            </div><!--fin col-md-12 box-cajas-->

          </div><!--fin row box-ind-->

        </div><!--fin col-md-10-->

      </div><!--fin row-->

    </div><!--fin container fluid-->


    {{/if}}


