<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 sinpadding">
      {{> lateralBeta}}
    </div>
    <!--DENTRO DE ESTE DIV VA: la cabecera y el contenido-->

    <div class="col-md-10 sinpadding">

      {{> cabeceraBeta}}<!--cabecera-->

      <div class="row box-ind sinpadding"><!-- Dentro de este div va todo el contenido-->
        <div class="col-md-12 box-cajas">

          <div class="row mt-2 mb-2">
            <div class="col-md-4">
              <h4>Cargar usuario</h4>
            </div>
          </div>

          <form class="form-group" action="/cargar-usuario/create" method="post">

            <div class="row">

              <div class="col-md-3">
                <label for="nombre">Nombre de usuario</label>
                <input required class="form-control move" type="text" name="nombre" placeholder="Nombre de usuario">
              </div>

              <div class="col-md-3">
                <label for="rol"> Rol del usuario </label>
                <select class="form-control move" name="rol">
                  <option value="">- Seleccione un rol</option>
                  {{#each tipos_usuarios}}
                  <option value="{{id_tipo}}">{{t_descrip}}</option>
                  {{/each}}
                </select>
              </div>

              <div class="col-md-3">
                <label for="perfil">Perfil de usuario</label>
                <select class="form-control move" name="perfil">
                  <option value="">- Seleccione un tipo</option>
                  {{#each perfiles}}
                  <option value="{{id_perfil}}">{{p_descrip}}</option>
                  {{/each}}
                </select>
              </div>



              <div class="col-md-3">
                <label for="Zona Comercial">Zona Comercial</label>
                <select class="form-control move" name="zona_comercial">
                  <option value="">- Seleccione una zona</option>
                  {{#each zonas_comerciales}}
                  <option value="{{id_zona}}">{{z_descrip}}</option>
                  {{/each}}

                </select>
              </div>
            </div>

            <div class="row">

              <div class="col-md-3">
                <label for="teléfono">Teléfono</label>
                <input required class="form-control move" type="text" name="telefono" placeholder="Teléfono">
              </div>

              <div class="col-md-3">
                <label for="mail">Correo electrónico </label>
                <input required class="form-control move" type="email" name="mail" placeholder="Correo electrónico">
              </div>

              <div class="col-md-3">
                <label for="ubicación">Ubicación</label>
                <input required class="form-control move" type="text" name="ubicacion" placeholder="Ubicación">
              </div>


              <div class="col-md-3">
                <label for="contraseña">Contraseña</label>
                <input required class="form-control move" type="password" name="contraseña" placeholder="Contraseña">
              </div>

            </div>


            <div class="textarea-container">
              <textarea name="observacion" placeholder="Escribe aquí las observaciones"></textarea>
            </div>

            <div class="row">
              <div class="col-md-3 mt-3 mb-3">
                <button class="btn btn-sm btn-warning" type="submit">Cargar</button>
              </div>
            </div>


          </form>

        </div><!--fin col-md-12 box-cajas-->

      </div><!--fin row box-ind-->

    </div><!--fin col-md-10-->

  </div><!--fin row-->


  <div><!--fin container fluid-->