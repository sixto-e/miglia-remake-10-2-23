<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 sinpadding">
      {{> lateralBeta}}
    </div>
    <!--DENTRO DE ESTE DIV VA: la cabecera y el contenido-->

    <div class="col-md-10 sinpadding">

      {{> cabeceraBeta}}<!--cabecera-->

      <div class="row box-ind sinpadding"><!-- Dentro de este div va todo el contenido-->
        <div class="col-md-12 box-cajas">
          <div class="row">
            <div class="col-md-4 mt-2 mb-2">
              <h4>Editar contraseña</h4>
            </div>
          </div>

          <form action="/mi-perfil/editar-password/{{id_usuario}}/create" class="form-group mt-2 mb-2" method="post">

            <div class="row">

              <div class="col-md-4">
                <label for="">Contraseña actual</label>
                <input required class="form-control" type="password" name="pass_actual" id="" placeholder="Contraseña actual">
              </div>

              <div class="col-md-4">
                <label for="">Contraseña nueva</label>
                <input required class="form-control" type="password" name="pass_nueva" id="" placeholder="Contraseña nueva">
              </div>


              <div class="col-md-4"><label for="">Repita la contraseña nueva</label>
                <input required class="form-control" type="password" name="pass_repetida" id="" placeholder="Repita la contraseña nueva">
              </div>

            </div>


            <button type="submit" class="mt-3 btn-sm btn btn-warning">Aplicar cambio</button>

          </form>



        </div><!--fin col-md-12 box-cajas-->

      </div><!--fin row box-ind-->

    </div><!--fin col-md-10-->

  </div><!--fin row-->

  <div><!--fin container fluid-->