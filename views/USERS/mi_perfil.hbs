<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 sinpadding">
      {{> lateralBeta}}
    </div>
    <!--DENTRO DE ESTE DIV VA: la cabecera y el contenido-->

    <div class="col-md-10 sinpadding">

      <div id="barra-cabecera">

        <div id="barra-cabecera-lado-izq">
          Escritorio
          <br>
          Tablero de estados y oportunidades
        </div>

        <div id="barra-cabecera-lado-der">
          <div class="row">
            <div class="col-md-10  d-flex justify-content-end align-items-center">
              <a href="/logout" class="btn-sm btn btn-dark"> <i class='bx bx-log-out'></i> Salir</a>
            </div>
          </div>
        </div>

      </div><!--Fin Barra Cabecera -->

      <div class="row box-ind sinpadding"><!-- Dentro de este div va todo el contenido-->
        <div class="col-md-12 box-cajas">

          <div class="mt-3"></div>

          <div class="row">

            <div class="col-md-12">

              <button class="btn btn-success btn-sm" id="btn-editor"><i class='bx bxs-edit-alt'
                  style='color:#ffffff'></i>
                Editar</button>

              <button class="btn-sm btn btn-danger" id="btn-cancel-editor"><i class='bx bx-x'></i>
                Cancelar</button>

              {{#each data_user}}
              <a class="btn btn-secondary btn-sm filtro-inter" id="btn-editar-pass"
                href="/mi-perfil/editar-password/{{id}}"> <i class='bx bxs-edit-alt' style='color:#ffffff'></i> Editar
                contraseña</a>
              {{/each}}

            </div>

          </div>

          <div class="row mb-3">
            <div class="col-md-3">
              <h4>Mis datos</h4>
            </div>
          </div>

          {{#each data_user}}
          <form class="form-group" action="/mi-perfil/{{id}}/create" method="post">
            {{/each}}
            <div class="row">

              <div class="col-md-3">
                <label for="nombre">Nombre de usuario</label>
                {{#each data_user}}
                <input class="form-control move" type="text" name="nombre" value="{{nombre}}"
                  placeholder="Nombre de usuario">
                {{/each}}
              </div>

              <div class="col-md-3">
                <label for="rol"> Rol del usuario </label>
                <select class="form-control move" name="rol">


                  <option value="{{rol_data.id_tipo}}" selected>{{rol_data.t_descrip}}</option>



                  {{#each tipos_usuarios}}
                  <option value="{{id_tipo}}">{{t_descrip}}</option>
                  {{/each}}

                </select>
              </div>

              <div class="col-md-3">
                <label for="perfil">Perfil de usuario</label>
                <select class="form-control move" name="perfil">


                  <option value="{{perfil_data.id_perfil}}">{{perfil_data.p_descrip}}</option>


                  {{#each perfiles}}
                  <option value="{{id_perfil}}">{{p_descrip}}</option>
                  {{/each}}
                </select>
              </div>



              <div class="col-md-3">
                <label for="Zona Comercial">Zona Comercial</label>
                <select class="form-control move" name="zona_comercial">


                  <option value="{{zona_comercial_data.id_zona}}" selected>{{zona_comercial_data.z_descrip}}</option>


                  {{#each zonas_comerciales}}
                  <option value="{{id_zona}}">{{z_descrip}}</option>
                  {{/each}}

                </select>
              </div>
            </div>

            <div class="row">

              <div class="col-md-3">
                <label for="teléfono">Teléfono</label>
                {{#each data_user}}
                <input class="form-control move" type="text" name="telefono" value="{{telefono}}"
                  placeholder="Teléfono">
                {{/each}}
              </div>

              <div class="col-md-3">
                <label for="mail">Correo electrónico </label>
                {{#each data_user}}
                <input class="form-control move" type="email" value="{{mail}}" name="mail"
                  placeholder="Correo electrónico">
                {{/each}}
              </div>

              <div class="col-md-3">
                <label for="ubicación">Ubicación</label>
                {{#each data_user}}
                <input class="form-control move" type="text" name="ubicacion" value="{{ubicacion}}"
                  placeholder="Ubicación">
                {{/each}}
              </div>



            </div>


            <div class="textarea-container">
              {{#each data_user}}
              <textarea name="observaciones" class="move" value="{{observaciones}}"
                placeholder="Escribe aquí las observaciones"></textarea>
              {{/each}}
            </div>

            <div class="row">
              <div class="col-md-3 mt-3 mb-3">
                <button class="btn  btn-sm btn-warning" type="submit" id="btn-save">Aplicar cambios</button>
              </div>
            </div>


          </form>



        </div><!--fin col-md-12 box-cajas-->

      </div><!--fin row box-ind-->

    </div><!--fin col-md-10-->

  </div><!--fin row-->

  <div><!--fin container fluid-->

    <script src="/js/perfil.js"></script>

    <style>
      /* Establece un tamaño uniforme para los botones y centra horizontal y verticalmente */
      .botones-perfil {
        display: flex;
        justify-content: center;
        /* Centra horizontalmente */
        align-items: center;
        /* Centra verticalmente */
        width: 150px;
        /* Ancho fijo */
        height: 50px;
        /* Alto fijo */
        padding: 10px;
        /* Espaciado interno para tamaño uniforme */
        font-size: 16px;
        /* Tamaño de fuente */
        margin: 5px;
        /* Espaciado entre botones */
      }
    </style>