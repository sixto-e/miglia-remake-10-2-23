                                    <h4>{{#each data_de_usuario_single}}{{nombre}} {{/each}} <button
                                            class="btn btn-danger btn-sm">No activo</button></h4>
                                </div>
                            </div>


                            <div class="row">
                                {{#each data_de_usuario_single}}
                                <div class="col-md-3"> <i class=' bx bx-md bxs-hard-hat'></i>
                                    <p>{{p_descrip}}</p>
                                </div>
                                {{/each}}
                            </div>

                            <div class="row">

                                {{#each data_de_usuario_single}}
                                <div class="col-md-3"> <i class='bx  bx-md bx-home-alt-2'></i>
                                    <p> Ubicado en
                                        {{ubicacion}} {{z_descrip}} </p>
                                </div>
                                {{/each}}

                            </div>

                            <div class="row mb-2">
                                <div class="col-md-3">
                                    {{#each data_de_usuario_single}}
                                    <i class='bx bx-md bxs-contact'></i>
                                    <p> {{telefono}} | {{mail}}</p>
                                    {{/each}}
                                </div>
                            </div>





                        </div><!--fin col-md-12 box-cajas-->

                    </div><!--fin row box-ind-->

                </div><!--fin col-md-10-->

            </div><!--fin row-->


            <div><!--fin container fluid-->

